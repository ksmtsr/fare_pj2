<div class="container">
  <div class="fw-bold text-secondary display-5 mt-5 mb-4">
    交通費清算書
  </div>
  <%= link_to "申請する", new_fare_path, class: "btn btn-lg btn-secondary mb-3" %>
  <% if @fares.empty?%>
  <p>申請されたデータはありません</p>
  <% else %>
  <p class="text-end fw-bold h3">合計金額: <%= @total_amount %>円</p>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>日付</th>
        <th>利用区間</th>
        <th>交通手段</th>
        <th>金額</th>
        <th>備考</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @fares.each do |fare| %>
      <tr>
        <td><%= fare.date %></td>
        <td><%= fare.routeA %>～<%= fare.routeB%></td>
        <td><%= fare.transportation %></td>
        <td><%= fare.amount %></td>
        <td><%= fare.remarks %></td>
        <td><%= link_to "削除", fare_path(fare.id), method: :post, data: { turbo_method: :delete, turbo_confirm: "削除しますか？"}, class: "btn btn-outline-dark" %></td>
      </tr>
      <% end %>
    </tbody>
  </Table>
  <% end %>
</div>
